@model InstituteOfFineArt.Models.Test
@{
    ViewData["Title"] = "Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*template review*@
<link href="https://fonts.googleapis.com/css?family=Roboto:400,700,900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/Review/fonts/icomoon/style.css">
<!-- Bootstrap CSS -->
<link rel="stylesheet" href="~/Review/css/bootstrap/bootstrap.css">
<!-- Style -->
<link rel="stylesheet" href="~/Review/css/style.css">

@{ var index = 1; }
@foreach (var tes in ViewBag.test)
{
<form method="post" action="@ViewBag.postUrl">
    <input type="hidden" name="upload" value="1" />
    <input type="hidden" name="cmd" value="_cart" />
    <input type="hidden" name="business" value="@ViewBag.business" />
    <input type="hidden" name="return" value="@ViewBag.returnUrl" />
    <div class="content">

        <div class="container">
            <div class="row align-items-stretch no-gutters contact-wrap">
                <div class="col-md-12">
                    <img width="100%" src="~/User/images/@tes.ImgOfTest">
                </div>
                <div class="col-md-12">
                    <div class="form h-100">
                        <h3>Infomation</h3>
                        <form class="mb-5" method="post" id="contactForm" name="contactForm">
                            <div class="row">
                                <div class="col-md-6 form-group mb-5">
                                    <label for="" class="col-form-label">Name Test *</label>
                                    <input value="@tes.NameTest" type="text" class="form-control" name="item_name_@index">
                                </div>
                                <div class="col-md-6 form-group mb-5">
                                    <label for="" class="col-form-label">Price *</label>
                                    <input value="@tes.Price" type="text" class="form-control" name="amount_@index">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 form-group mb-5">
                                    <label for="" class="col-form-label">Content *</label>
                                    <input value="@tes.Content" type="text" class="form-control" name="phone" id="phone">
                                </div>
                                <div class="col-md-6 form-group mb-5">
                                    <label for="" class="col-form-label">Date *</label>
                                    <input value="@tes.Datecreated" type="text" class="form-control" name="company">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 form-group mb-5">
                                    <label for="message" class="col-form-label">Description *</label>
                                    <textarea value="" class="form-control" name="message" cols="30" rows="4">@tes.Desc</textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="submit" value="Send Message" class="btn btn-primary rounded-0 py-2 px-4">
                                    <span class="submitting"></span>
                                </div>
                            </div>
                        </form>
                        
                        <div id="form-message-warning mt-4"></div>
                        <div id="form-message-success">
                            Your message was sent, thank you!
                        </div>

                    </div>
                </div>

            </div>
        </div>



    </div>
</form>
    index++;
}

