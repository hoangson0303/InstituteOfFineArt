        @foreach (var compi in ViewBag.com)
        {
            <a class="card-title" asp-controller="detailcompetition" asp-action="schooldetail" asp-route-id="@compi.IdCom">Back</a>
        }
    </div>
    <form>

        <h4 class="card-title">
            Registered Contests

