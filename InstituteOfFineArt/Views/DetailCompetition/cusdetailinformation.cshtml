        <div class="tab-content profile-tab" id="myTabContent">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Id Name</th>
                        <th>School Name</th>
                        <th>Compition Name </th>
                        <th>Full Name</th>
                        <th>Content</th>
                        <th>Describe</th>
                        <th>Contest Photo</th>
                        <th>Price</th>

                    </tr>
                </thead>
                @foreach (var compi in ViewBag.com)
                {
                    @foreach (var tes in ViewBag.test)
                    {
                        @if (compi.IdCom != tes.IdCom)
                        {

                        }
                        else
                        {
                            <tbody>
                                <tr>
                                    <td>@tes.IdTest</td>
                                    <td>@tes.IdAcc</td>
                                    <td>@tes.IdCom</td>
                                    <td>@tes.NameTest</td>
                                    <td>@tes.Content</td>
                                    <td>@tes.Desc</td>
                                    <td> <img src="~/User/images/@tes.ImgOfTest" width="100" alt="Alternate Text" /></td>
                                    <td>@tes.Price $</td>


                                </tr>


                            </tbody>
                        }

                    }
                }
            </table>



        </div>



