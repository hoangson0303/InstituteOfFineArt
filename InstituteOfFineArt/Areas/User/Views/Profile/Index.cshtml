
@{
    ViewData["Title"] = "UserProfile";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    <div class="container emp-profile">
        <form method="post">
            <div class="row">
                <div class="col-md-4">
                    @foreach (var user in ViewBag.infouser)
                    {
                        <div class="profile-img">
                            <img class="img-thumbnail" src="~/User/images/@user.Avatar" alt="" />

                        </div>
                    }
                </div>
                <div class="col-md-6">
                    <div class="profile-head">
                        @foreach (var user in ViewBag.infouser)
                        {
                            <h5>
                                @user.Fullname
                            </h5>
                        }
                        <h6>
                            Personal Infomation
                        </h6>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Contests Participated</a>
                            </li>
                        </ul>
                    </div>
                </div>
                @foreach (var user in ViewBag.infouser)
                {
                    <div class="col-md-2">
                        <a class="profile-edit-btn" name="btnAddMore" asp-controller="profile" asp-action="update" asp-route-id="@user.IdAcc">Edit Profile</a>
                    </div>
                }
                </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-work">
                        <p>SETTINGS</p>
                        <a asp-controller="changepass" asp-action="index">Change Password</a><br />
                        <a asp-controller="showtest" asp-action="index">Contest Registration Information</a><br />
                        <a asp-controller="invoice" asp-action="index">Invoice</a>
                        <p>SKILLS</p>
                        <a href="">Web Designer</a><br />
                        <a href="">Web Developer</a><br />
                        <a href="">WordPress</a><br />
                        <a href="">WooCommerce</a><br />
                        <a href="">PHP, .Net</a><br />
                    </div>
                </div>

             
                <div class="col-md-8">
                    
                    <div class="tab-content profile-tab" id="myTabContent">
                        @foreach (var user in ViewBag.infouser)
                        {
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>User Id</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@user.IdAcc</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Name</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@user.Fullname</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@user.Email</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Phone</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@user.PhoneNumber</p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Address</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@user.Addr</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Date Of Birth</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@user.Dob</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Gender</label>
                                    </div>
                                    <div class="col-md-6">
                                        @if (@user.Gender == true)
                                        {
                                            <p>Male</p>
                                        }
                                        else
                                        {
                                            <p>Female</p>
                                        }
                                    </div>
                                </div>

                            </div>
                        }

                    

                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        @foreach (var tes in ViewBag.test)
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Name Id</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@tes.IdTest</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Name School</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@tes.IdAcc</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Full Name</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@tes.NameTest</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        Content
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <p>@tes.Content</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        Describe
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <p>@tes.Desc</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Contest Photo</label>
                                </div>
                                <div class="col-md-6">
                                    <img src="~/User/images/@tes.ImgOfTest" width="150" alt="Alternate Text" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Price</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@tes.Price</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Stat</label>
                                </div>
                                <div class="col-md-6">
                                    @if (tes.Stat != true)
                                    {
                                        <p>@tes.Stat</p>


                                        <p>Waiting for the school to approve the test !</p>

                                    }
                                    else
                                    {
                                        <p>@tes.Stat</p>
                                        <p>School has approved your post ! </p>
                                    }


                                </div>
                            </div>
                        }
                    </div>
                   
                    </div>
                    </div>

                </div>
        </form>
    </div>

