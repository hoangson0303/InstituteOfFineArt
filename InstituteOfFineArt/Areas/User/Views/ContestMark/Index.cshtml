
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSchoolCreate.cshtml";
}

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor m-b-0 m-t-0">Table</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active">Table</li>
                </ol>
            </div>
            <div class="col-md-7 col-4 align-self-center">
                <a href="https://themewagon.com/themes/material-bootstrap-4-free-admin-template/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down">Download Now</a>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <!-- column -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-block">
                        <h4 class="card-title">Basic Table</h4>
                        <h6 class="card-subtitle">Contests Going On<code>.table</code></h6>
                        <div class="table-responsive">
                            <form>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#ID Com</th>
                                            <th>Score</th>
                                            <th>Description</th>
                                            <th>Status</th>
                                            <th>Date Mark</th>
                                            <th>#ID Test</th>
                                            <th>#ID School</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>

                                    <tbody>

                                        @foreach (var test in ViewBag.testcore)
                                        {

                                        <tr>
                                            <td>@test.IdCom</td>
                                            <td>@test.Scores</td>
                                            <td>@test.Desc</td>
                                            @if (@test.Stat == false)
                                            {
                                                <td style="color:red">Not Graded Yet</td>
                                            }
                                            else
                                            {
                                                <td style="color:lawngreen">Scored</td>
                                            }

                                            <td>@test.GradingDate</td>
                                            <td>@test.IdTest</td>
                                            <td>@test.IdSchool</td>
                                            <td>
                                                <a class="btn btn-warning" asp-controller="contestmark" asp-action="mark" asp-route-id="@test.IdTest">Mark</a>

                                            </td>
                                        </tr>

                                        }



                                    </tbody>



                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer">
        © 2021 Institute Of Fine Art
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>

