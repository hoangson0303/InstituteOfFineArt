
@{
    ViewData["Title"] = "Table";
    Layout = "~/Views/Shared/_LayoutSchoolCreate.cshtml";
}


<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor m-b-0 m-t-0">Table</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active">Table</li>
                </ol>
            </div>
            <div class="col-md-7 col-4 align-self-center">
                <a href="https://themewagon.com/themes/material-bootstrap-4-free-admin-template/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down">Download Now</a>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <!-- column -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-block">
                        <h4 class="card-title">Basic Table</h4>
                        <h6 class="card-subtitle">Compititions<code>.table</code></h6>
                        <div class="table-responsive">
                            <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" asp-action="search" asp-controller="create" method="get">
                                <div class="input-group">
                                    <p>choose a start date..</p>
                                    <input type="date" name="keyword" class="form-control bg-white border-0 small" placeholder="Enter the start date.."
                                           aria-label="Search" aria-describedby="basic-addon2" required>
                                    <p>Choose the end date..</p>
                                    <input type="date" name="keywordend" class="form-control bg-white border-0 small" placeholder="Choose the end date.."
                                           aria-label="Search" aria-describedby="basic-addon2" required>
                                    <div class="input-group-append">
                                        @*<button class="btn btn-primary" type="button">
                <i class="fas fa-search fa-sm"></i>
            </button>*@
                                        <input class="btn btn-primary" type="submit" name="idcom" value="Search" />
                                    </div>
                                </div>
                            </form>
                            <form>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#ID Competions</th>
                                            <th>#ID Account</th>
                                            <th>Name Competitions</th>
                                            <th>Description</th>
                                            <th>Images</th>
                                            <th>Date Starting</th>
                                            <th>Date Ending</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    @foreach (var compi in ViewBag.compititions)
                                    {
                                        <tbody>
                                            <tr>
                                                <td>@compi.IdCom</td>
                                                <td>@compi.IdAcc</td>
                                                <td>@compi.NameCom</td>
                                                <td>@compi.Desc</td>
                                                @*<td>@compi.ImgOfCom</td>*@
                                                <td><img src="~/User/images/@compi.ImgOfCom" width="100" alt="Alternate Text" /></td>
                                                <td>@compi.DateStart</td>
                                                <td>@compi.DateEnd</td>
                                                @if (@compi.Stat == false)
                                                {
                                                    <td> Awaiting Approval</td>
                                                }
                                                else
                                                {
                                                    <td> HAPPENING </td>
                                                }
                                                <td>
                                                    <a class="btn btn-primary" asp-action="update" asp-controller="create" asp-route-id="@compi.IdCom">Edit</a>
                                                    <a class="btn btn-danger" asp-controller="create" asp-action="delete" asp-route-id="@compi.IdCom" onclick="return confirm('Are you sure?')">Delete</a>

                                                </td>
                                            </tr>

                                            @*<tr>
                            <td>2</td>
                            <td>Deshmukh</td>
                            <td>Gaylord</td>

                        </tr>
                        <tr>
                            <td>3</td>
                            <td>Sanghani</td>
                            <td>Gusikowski</td>

                        </tr>
                        <tr>
                            <td>4</td>
                            <td>Roshan</td>
                            <td>Rogahn</td>

                        </tr>
                        <tr>
                            <td>5</td>
                            <td>Joshi</td>
                            <td>Hickle</td>

                        </tr>
                        <tr>
                            <td>6</td>
                            <td>Nigam</td>
                            <td>Eichmann</td>

                        </tr>*@
                                        </tbody>

                                    }
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer">
        © 2021 Institute Of Fine Art
    </footer>
