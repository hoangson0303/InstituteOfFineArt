@model InstituteOfFineArt.Models.Role
@{
    ViewData["Title"] = "Role";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>ROLES</h1>
<br />
<form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
    <div class="input-group">
        <input type="text" class="form-control bg-white border-0 small" placeholder="Search for..."
               aria-label="Search" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-primary" type="button">
                <i class="fas fa-search fa-sm"></i>
            </button>
        </div>
    </div>
    <br />
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();"><i class="fas fa-file-import">  ADD</i></button>
</form>
<br />
<table class="table table-success">

    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">NAME ROLE</th>
            <th scope="col">Date Create</th>
            <th scope="col">Date update</th>
            <th scope="col">STATUS</th>
            <th scope="col">ACTION</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in ViewBag.roles)
        {
            <tr>
                <td>@role.IdRole</td>
                <td>@role.NameRole</td>
                <td>@role.Datecreated</td>
                <td>@role.Dateupdated</td>
                <td>@role.Stat</td>
                <td>
                    <a type="button" class="btn btn-danger" asp-controller="role" asp-action="delete" asp-route-id="@role.IdRole" onclick="return confirm('Are you sure?')"><i class="far fa-trash-alt"></i></a>

                </td>
            </tr>

        }
    </tbody>
</table>
<br />
<br />
<br />

<form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
    <div class="input-group">
        <input type="text" class="form-control bg-white border-0 small" placeholder="Search for..."
               aria-label="Search" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-primary" type="button">
                <i class="fas fa-search fa-sm"></i>
            </button>
        </div>
    </div>
    <br />
</form>
<br />
<table class="table table-success">

    <thead>
        <tr>
            <th scope="col">ID ROLE</th>
            <th scope="col">ID ACCOUNT</th>
            <th scope="col">Date Create</th>
            <th scope="col">Date update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userRole in ViewBag.userRoles)
        {
            <tr>
                <td>@userRole.IdRole</td>
                <td>@userRole.IdAcc</td>
                <td>@userRole.Datecreated</td>
                <td>@userRole.Dateupdated</td>
            </tr>

        }
    </tbody>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Inbox</h4>
            </div>
            <div class="modal-body">
                <form asp-controller="role" asp-action="add" method="post">

                    <div class="form-group">
                        <label for="NameRole">NameRole</label>
                        <input type="text" class="form-control" id="NameRole" placeholder="Role" asp-for="NameRole" />
                        <span asp-validation-for="NameRole"></span>

                    </div>


                    <input type="submit" value="ADD" class="btn btn-primary" />
                </form>
            </div>

        </div>
    </div>
</div>

