@model InstituteOfFineArt.Models.Account
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>
<form asp-controller="account" asp-action="delete" method="post">

    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>

    <div class="form-group">
        <label>Fullname</label>
        <input type="text" class="form-control" asp-for="Fullname" />
    </div>

    <div class="form-group">
        <label>Date Of Birth</label>
        <input type="text" class="form-control" asp-for="Dob" />
    </div>

    <div class="form-group">
        <label>Gender</label>
        <select class="form-control" asp-for="Gender">
            <option value="0">MALE</option>
            <option value="1">FEMALE</option>
        </select>
    </div>

    <div class="form-group">
        <label>Avatar</label>
        <input type="text" class="form-control" asp-for="Avatar" />
    </div>

    <div class="form-group">
        <label>PhoneNumber</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
    </div>

    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" asp-for="Addr" />
    </div>



    <input type="hidden" asp-for="IdAcc" />
    <input type="submit" value="Delete" class="btn btn-danger"  onclick="return confirm('Are you sure?')" />
</form>

